<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/icon_dialog_cancel" />


        <LinearLayout
            android:gravity="center|bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付"
                android:textColor="#333333"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载中..."
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/golden"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#333333"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:text="拥有6000积分并成为白银会员"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="15dp" />


        <View
            android:layout_marginTop="27dp"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <RelativeLayout
            android:id="@+id/rl_weixin_type"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.views.CircleImageView
                android:id="@+id/civ_header"
                android:src="@mipmap/icon_weixin_pay_type"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_toRightOf="@+id/civ_header"
                android:layout_marginLeft="20dp"
                android:textColor="#333333"
                android:text="微信支付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_below="@+id/tv_pay_type"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/civ_header"
                android:layout_marginLeft="20dp"
                android:textColor="#999999"
                android:text="推荐安装微信5.0及以上版本的用户使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/v_weixin_type"
                android:layout_alignParentRight="true"
                android:background="@drawable/seletctor_pay_type"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </RelativeLayout>

        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <RelativeLayout
            android:id="@+id/rl_alipay_type"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.views.CircleImageView
                android:id="@+id/civ_header2"
                android:src="@mipmap/icon_alipay_type"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/tv_pay_type2"
                android:layout_toRightOf="@+id/civ_header2"
                android:layout_marginLeft="20dp"
                android:textColor="#333333"
                android:text="支付宝支付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_below="@+id/tv_pay_type2"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/civ_header2"
                android:layout_marginLeft="20dp"
                android:textColor="#999999"
                android:text="推荐有 支付宝账户的用户使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/v_alipay_type"
                android:layout_alignParentRight="true"
                android:background="@drawable/seletctor_pay_type"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </RelativeLayout>

        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/rl_balance_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:visibility="visible">

        <com.views.CircleImageView
            android:id="@+id/civ_header3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_pay_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/civ_header3"
            android:text="余额支付"
            android:textColor="#333333" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pay_type3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/civ_header3"
            android:text="使用钱包余额支付"
            android:textColor="#999999"
            android:textSize="10dp" />

        <View
            android:id="@+id/v_bank_type"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/seletctor_pay_type" />

    </RelativeLayout>

    <LinearLayout
            android:padding="20dp"
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_ok"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="center"
                android:text="确认支付"
                android:background="@drawable/sele_btn_golden_white_5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
</LinearLayout>