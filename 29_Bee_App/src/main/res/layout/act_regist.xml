<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/defaut_toolbar_white" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLength="11"
            android:inputType="phone"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:background="@drawable/shap_bg_stroke_login_grey"
            android:maxLines="1"
            android:hint="请输入手机号码"
            android:textColor="#999999"
            android:textColorHint="#999999" />


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_verification_code"
                android:textColor="#999999"
                android:textColorHint="#999999"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shap_bg_stroke_login_grey"
                android:gravity="center|left"
                android:inputType="number"
                android:maxLines="1"
                android:hint="请输入验证码"
                android:textSize="15dp"
                android:padding="15dp"
                />

            <TextView
                android:id="@+id/tv_get_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:padding="9dp"
                android:background="@drawable/shap_bg_login_btn"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:background="@drawable/shap_bg_stroke_login_grey"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:maxLines="1"
            android:maxLength="14"
            android:gravity="center|left"
            android:hint="请输入6-14位登录密码"
            android:textSize="15dp"
            android:padding="15dp"
            />


        <EditText
            android:id="@+id/et_new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/shap_bg_stroke_login_grey"
            android:gravity="center|left"
            android:hint="请输入6位支付密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:maxLines="1"
            android:padding="15dp"
            android:textColor="@color/bg_depth_black"
            android:textColorHint="@color/text_grey_light"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/sele_btn_golden_white_5dp"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="15dp" /> />


    </LinearLayout>


</LinearLayout>